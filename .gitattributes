# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# JavaScript/TypeScript files
*.js text
*.ts text
*.jsx text
*.tsx text
*.json text

# Vue files
*.vue text

# CSS files
*.css text
*.scss text
*.sass text

# HTML files
*.html text
*.htm text

# Markdown files
*.md text diff=markdown

# Configuration files
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Documentation
*.txt text
*.rst text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary

# Archives
*.7z binary
*.bz2 binary
*.gz binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary
*.flac binary

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary

# Logs
*.log text

# Temporary files
*.tmp text
*.temp text
*.bak text
*.backup text

# IDE
.vscode/* text
.idea/* text

# OS
.DS_Store binary
Thumbs.db binary

